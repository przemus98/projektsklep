@using Sklep.Controllers
@{
    ViewBag.Title = "Lista";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="ListaKategoriZawartosc">
    @Html.Action("MenuKategorii")
    <div id="KategorieListPrawaSekcja">
        <a class="PrzyciskLink" href="@Url.Action("Lista", "Produkty", new { sortOrder = ViewBag.NazwaSortowanie })">Sortuj po nazwie</a>
        <a class="PrzyciskLink" href="@Url.Action("Lista", "Produkty", new { sortOrder = ViewBag.CenaSortowanie })">Sortuj po cenie</a>
        <div id="SekcjaListaKategori">
            @Html.Partial("_ListaProduktow")
        </div>
    </div>
</div>
